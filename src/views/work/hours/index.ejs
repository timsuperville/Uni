<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="icon" type="image/png" href="assets/img/favicon.png">
   <title>Work Hours Tracker</title>
   <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
   <script src="https://kit.fontawesome.com/7527646f2a.js" crossorigin="anonymous"></script>
</head>
<body>
   <div class="container mt-5">
      <h1 class="text-center">Work Hours Tracker</h1>
      <div class="row">
         <div class="col-md-12">
            <table class="table table-striped">
               <thead>
                  <tr>
                     <th>Date</th>
                     <th>Start Time</th>
                     <th>End Time</th>
                     <th>Total Hours</th>
                     <th>Actions</th>
                  </tr>
               </thead>
               <tbody id="work-hours-table">
                  <!-- Dynamic rows will be added here -->
               </tbody>
            </table>
         </div>
      </div>
      <div class="row">
         <div class="col-md-12 text-center">
            <button class="btn btn-primary" onclick="addWorkHour()"><i class="fas fa-plus"></i> Add Work Hour</button>
         </div>
      </div>
   </div>
   <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
   <script type="module">
      import {  addWorkHour, deleteRow } from '/js/work/index.js';
      
      // getWorkHours();
      
      window.addWorkHour = addWorkHour;
      window.deleteWorkHour = deleteRow;
   </script>
</body>
</html>