<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Church Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .dashboard-header {
            background-color: #343a40;
            color: white;
            padding: 20px;
        }
        .card {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <!-- Dashboard Header -->
    <div class="dashboard-header text-center">
        <h1>Church Dashboard</h1>
        <p>Welcome to the Church Management System</p>
    </div>

    <!-- Main Content -->
    <div class="container mt-4">
        <div class="row">
            <!-- Navigation Panel -->
            <div class="col-md-3">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action active">Dashboard</a>
                    <a href="#" class="list-group-item list-group-item-action">Announcements</a>
                    <a href="#" class="list-group-item list-group-item-action">Events</a>
                    <a href="#" class="list-group-item list-group-item-action">Members</a>
                    <a href="#" class="list-group-item list-group-item-action">Settings</a>
                </div>
            </div>

            <!-- Dashboard Content -->
            <div class="col-md-9">
                <div class="row">
                    <!-- Announcements -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-primary text-white">Announcements</div>
                            <div class="card-body">
                                <ul id="announcements-list" class="list-unstyled">
                                    <li>No announcements yet.</li>
                                </ul>
                                <button class="btn btn-primary" id="add-announcement">Add Announcement</button>
                            </div>
                        </div>
                    </div>

                    <!-- Events -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-success text-white">Upcoming Events</div>
                            <div class="card-body">
                                <ul id="events-list" class="list-unstyled">
                                    <li>No events scheduled.</li>
                                </ul>
                                <button class="btn btn-success" id="add-event">Add Event</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Members List -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-info text-white">Members</div>
                            <div class="card-body">
                                <ul id="members-list" class="list-unstyled">
                                    <li>No members added yet.</li>
                                </ul>
                                <button class="btn btn-info" id="add-member">Add Member</button>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Access Panel -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-warning text-white">Quick Access</div>
                            <div class="card-body">
                                <button class="btn btn-warning btn-block">Service Schedule</button>
                                <button class="btn btn-warning btn-block">Manage Donations</button>
                                <button class="btn btn-warning btn-block">Contact Admin</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('add-announcement').addEventListener('click', () => {
            const announcement = prompt("Enter an announcement:");
            if (announcement) {
                const list = document.getElementById('announcements-list');
                const listItem = document.createElement('li');
                listItem.textContent = announcement;
                list.appendChild(listItem);
            }
        });

        document.getElementById('add-event').addEventListener('click', () => {
            const event = prompt("Enter an event:");
            if (event) {
                const list = document.getElementById('events-list');
                const listItem = document.createElement('li');
                listItem.textContent = event;
                list.appendChild(listItem);
            }
        });

        document.getElementById('add-member').addEventListener('click', () => {
            const member = prompt("Enter a member's name:");
            if (member) {
                const list = document.getElementById('members-list');
                const listItem = document.createElement('li');
                listItem.textContent = member;
                list.appendChild(listItem);
            }
        });
    </script>
</body>
</html>
